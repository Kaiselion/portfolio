<button
	id='top-btn'
	class='fixed bottom-30 right-15 text-center bg-indigo-700 rounded-full scale-175 hover:scale-200 cursor-pointer'
>
	<svg
		class='w-6 h-6 text-gray-800 dark:text-white'
		aria-hidden='true'
		fill='none'
	>
		<path
			stroke='currentColor'
			stroke-linecap='round'
			stroke-linejoin='round'
			stroke-width='3'
			d='M12 6v13m0-13 4 4m-4-4-4 4'></path>
	</svg>
</button>

<script>
	const topButton = document.querySelector('#top-btn') as HTMLButtonElement
	topButton.addEventListener('click', () => {
		window.scrollTo({
			top: 0
		})
	})
</script>
